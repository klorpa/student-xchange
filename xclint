#!/bin/bash
echo 'Looking for missing coordinates (needed for Twine compatibility)'
grep "^\:\:" *.tw2 | grep -v "<[0-9]\+,[0-9]\+>"
#| grep -v "::StoryTitle" | grep -v "::Configuration" | grep -v "::StoryCSS"

echo
echo Looking for incorrectly terminated if statements
grep -n "<<if>$" *.tw2
grep -n "<</if>$" *.tw2
grep -n "<<if>>>" *.tw2
grep -n "<</if>>>" *.tw2
